{
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": true,
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "Publish Test",
      "components": ["@cpro-js/publish-test", "@cpro-js/publish-test2"]
    }
  ],
  "prerelease": true,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": true,
  "group-pull-request-title-pattern": "chore: release ${branch}",
  "packages": {
    "packages/publish-test": {
      "component": "@cpro-js/publish-test"
    },
    "packages/publish-test2": {
      "component": "@cpro-js/publish-test"
    }
  }
}
